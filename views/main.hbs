<script src="main-script.js"></script>

<div class="container bd">
    <div class="row">
        <div class="col">
            <form method="POST">
                <h5>Stato connessione server</h5>
                {{message}}<br />

                <input type='hidden' name='action' value='connect'>
                <button type="submit" class="btn btn-primary">
                    {{#if connected}}
                        Disconnetti
                    {{else}}
                        Connetti
                    {{/if}}
                </button>
            </form>
            <hr />
            <form method="POST" id="streamingForm">
                <h5>Streaming rilevamenti</h5>
                {{#if streaming}}
                    Streaming attivo
                {{else}}
                    Streaming non attivo
                {{/if}}
                <br/>

                <input type='hidden' name='action'>
                <button type="button" class="btn btn-primary" onclick="toggleStreaming('{{connected}}', '{{streaming}}')">
                    {{#if streaming}}
                        Stop streaming
                    {{else}}
                        Start streaming
                    {{/if}} 
                </button>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="errorModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="errorModalTitle">Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="errorModalContent"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>