<script src='main-script.js'></script>

<input type='hidden' id='params' value='{{params}}'>

<div class='container bd'>
    <div class='row'>
        <div class='col'>
            <form method='POST' id='connectForm'>
                <h5>Connessione server</h5>
                {{message}}<br />

                <input type='hidden' name='action' value='connect'>
                <button type='button' class='btn btn-primary' onclick='toggleConnect("{{connected}}", "{{streaming}}")'>
                    {{#if connected}}
                        Disconnetti
                    {{else}}
                        Connetti
                    {{/if}}
                </button>
            </form>
            <hr />
            <form method='POST' id='streamingForm'>
                <h5>Streaming rilevamenti</h5>
                <label class="title-label">Stato</label>
                {{#if streaming}}
                    <p>Streaming attivo</p>
                {{else}}
                    <p>Streaming non attivo</p>
                {{/if}}
                <div id='detectionsContainer' style='display: none'>
                    <label class="title-label">Allarmi / Rilevamenti</label>
                    <p id='detectionsCount'></p>
                    <label class="title-label">FPS server</label>
                    <p id='fps'></p>
                    <label class="title-label">Ultimo punto cliccato</label>
                    <p id='lastPoint'></p>
                    <div>
                        <canvas id="drawCanvas" width="100" height="100" onmousedown="getCursorPosition()"></canvas>
                    </div>
                </div>

                <input type='hidden' name='action'>
                <button type='button' class='btn btn-primary' onclick='toggleStreaming("{{connected}}", "{{streaming}}")'>
                    {{#if streaming}}
                        Stop streaming
                    {{else}}
                        Start streaming
                    {{/if}} 
                </button>
            </form>
        </div>
    </div>
</div>

<div class='modal fade' id='errorModal' tabindex='-1' role='dialog' aria-hidden='true'>
    <div class='modal-dialog' role='document'>
        <div class='modal-content'>
            <div class='modal-header'>
                <h5 class='modal-title' id='errorModalTitle'>Title</h5>
                <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
                    <span aria-hidden='true'>&times;</span>
                </button>
            </div>
            <div class='modal-body'>
                <p id='errorModalContent'></p>
            </div>
            <div class='modal-footer'>
                <button type='button' class='btn btn-primary' data-dismiss='modal'>Close</button>
            </div>
        </div>
    </div>
</div>